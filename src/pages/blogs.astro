---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

const blogs = await Astro.glob("../pages/blogs/*.mdx");
---

<head>
	<MainHead title="Learning logs" />
</head>
<body class="bg-zinc-200 dark:bg-zinc-900 text-black dark:text-white font-mono">
	<Nav />
	<div class="my-2 p-10 text-center">
		<h2 class="text-lg italic font-bold">What I'm learning about</h2>
		<div class="pt-10">
			{
				blogs.map((blog) => (
					<li class="p-2 underline text-black dark:text-zinc-300">
						<a href={blog.url}>{blog.frontmatter.title}</a>
					</li>
				))
			}
		</div>
	</div>
	<Footer />
</body>
